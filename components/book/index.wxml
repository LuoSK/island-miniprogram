<view bindtap="onTap" class="container">
  <image src="{{book.image}}" />
  <view class="description">
    <view class="title">{{book.title}}</view>
    <view class="author">{{book.author}}</view>
    <view class="foot">
      <text wx:if="{{book.fav_nums}}" class="footer">{{book.fav_nums}} 喜欢</text>
    </view>
  </view>
</view>